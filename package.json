{
  "name": "oautter",
  "version": "0.1.0",
  "description": "Compliant OAuth 2.0 Server.",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "serve-debug": "node --inspect dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "unit": "jest --testMatch '**/test/unit/**/*.test.(ts|js)'",
    "integration": "jest --testMatch '**/test/integration/**/*.test.(ts|js)'",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-node-debug": "nodemon --inspect dist/server.js",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "author": "Tanmay",
  "license": "ISC",
  "dependencies": {
    "@types/uuid": "^8.3.1",
    "aws-sdk": "^2.958.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-pino-logger": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.1.2",
    "phin": "^3.6.0",
    "pino": "^6.13.3",
    "redis": "^3.1.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "^4.0.2",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^16.4.10",
    "@types/redis": "^2.8.31",
    "@types/shelljs": "^0.8.9",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "concurrently": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.6",
    "jest-sonar": "^0.2.12",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.12",
    "pino-pretty": "^7.0.1",
    "redis-mock": "^0.56.3",
    "shelljs": "^0.8.4",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.5"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maytanthegeek/oautter.git"
  },
  "keywords": [
    "oauth2.0",
    "authentication",
    "authorization",
    "oidc"
  ],
  "bugs": {
    "url": "https://github.com/maytanthegeek/oautter/issues"
  },
  "homepage": "https://github.com/maytanthegeek/oautter#readme"
}
